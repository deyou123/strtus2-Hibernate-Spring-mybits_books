<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.zdy.hibernate.entity.User" table="user" >
       <id name="id" type="int" column="id">
           <generator class="native"></generator>
       </id>
        <property name="loginName" type="java.lang.String" column="loginname" length="20" not-null="true"></property>
        <property name="loginPwd" type="java.lang.String" column="loginpwd" length="20" not-null="true"></property>
        <property name="tureName" type="java.lang.String" column="turename" length="20" not-null="true"></property>

    </class>
</hibernate-mapping>